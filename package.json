{
    "name": "vscode-youji",
    "displayName": "youji-bok",
    "description": "youji插件bok",
    "keywords": [
        "vscode",
        "youji",
        "bok"
    ],
    "version": "1.2.6",
    "publisher": "youji",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
		"configuration": {
			"title": "youji-bok",
			"type": "object",
			"properties": {
				"youjiBok.currPageNumber": {
					"type": "number",
					"default": 1,
					"description": "当前页数"
				},
				"youjiBok.pageSize": {
					"type": "number",
					"default": 50,
					"description": "每页数量"
				},
				"youjiBok.isEnglish": {
					"type": "boolean",
					"default": false,
					"description": "是否为英文？？"
				},
				"youjiBok.lineBreak": {
					"type": "string",
					"default": " ",
					"description": "换行分隔符号，默认一个空格"
				},
				"youjiBok.filePath": {
					"type": "string",
					"default": "",
					"description": "TXT格式绝对路径"
				},
				"youjiBok.disabled": {
					"type": "boolean",
					"default": false,
					"description": "禁用状态"
				}
			}
		},
		"commands": [
			{
				"command": "extension.displayCode",
				"title": "youji-bok.DisplayCode"
			},
			{
				"command": "extension.getPreviousPage",
				"title": "youji-bok.PreviousBook"
			},
			{
				"command": "extension.getNextPage",
				"title": "youji-bok.NextBook"
			},
			{
				"command": "extension.getJumpingPage",
				"title": "youji-bok.JumpingBook"
			},
			{
				"command": "extension.disabled",
				"title": "youji-bok.disabled"
			},
			{
				"command": "extension.noDisabled",
				"title": "youji-bok.noDisabled"
			}
		],
		"keybindings": [
			{
				"command": "extension.getPreviousPage",
				"key": "ctrl+2",
				"mac": "cmd+2",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.getNextPage",
				"key": "ctrl+3",
				"mac": "cmd+3",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.getNextPage",
				"key": "Insert",
				"mac": "cmd+Insert",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.getJumpingPage",
				"key": "ctrl+alt+;",
				"mac": "cmd+;"
			},
			{
				"command": "extension.displayCode",
				"key": "ctrl+4",
				"mac": "cmd+4"
			},
			{
				"command": "extension.displayCode",
				"key": "home",
				"mac": "home"
			},
			{
				"command": "extension.disabled",
				"key": "ctrl+1",
				"mac": "cmd+1"
			},
			{
				"command": "extension.noDisabled",
				"key": "ctrl+alt+1",
				"mac": "cmd+1"
			}
		]
    },
    "scripts": {
		"vscode:prepublish": "yarn run compile",
		"start": "vsce package",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.34"
    }
}
